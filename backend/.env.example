# ============================================================================
# HireSight Backend Configuration
# ============================================================================
# IMPORTANT: Copy this file to .env and update with your actual values
# NEVER commit the .env file to version control!

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
HOST=0.0.0.0
# CRITICAL: Set to False in production!
DEBUG=False

# ============================================================================
# GITHUB INTEGRATION (Optional but Recommended)
# ============================================================================
# Get your personal access token at: https://github.com/settings/tokens
# Required scopes: read:user, repo (read-only)
# Without this, you'll hit GitHub API rate limits quickly (60 requests/hour)
GITHUB_TOKEN=

# ============================================================================
# GEMINI AI CONFIGURATION (Required for Interview Questions)
# ============================================================================
# Get your API key at: https://aistudio.google.com/app/apikey
# Required for /api/interview/generate endpoint
# ROTATE IMMEDIATELY if exposed in version control!
GEMINI_API_KEY=

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_FILE_SIZE_MB=50
MAX_ZIP_EXTRACTED_SIZE_MB=200
MAX_ZIP_FILES=100
UPLOAD_FOLDER=uploads

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# For production, specify allowed origins (comma-separated)
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# For local development, CORS is open to all origins

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=hiresight.log
# Available levels: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# SECURITY (Recommended for Production)
# ============================================================================
# Generate a secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=
# API rate limiting (requests per hour per IP)
API_RATE_LIMIT=100

# ============================================================================
# DATABASE (Future Enhancement)
# ============================================================================
# PostgreSQL connection string (Supabase or other PostgreSQL database)
DATABASE_URL=
# Direct connection to the database (used for migrations)
DIRECT_URL=
# Redis for caching (optional)
# REDIS_URL=redis://localhost:6379/0


# ============================================================================
# EXTERNAL SERVICES (Optional)
# ============================================================================
# LinkedIn API credentials (if implementing LinkedIn integration)
# LINKEDIN_CLIENT_ID=
# LINKEDIN_CLIENT_SECRET=

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=
# Application environment
# ENVIRONMENT=production
